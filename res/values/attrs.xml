<resources>

    <declare-styleable name="Circle">
        <attr name="circleBackground" format="integer" />
        <attr name="firstChildPosition">
            <enum name="East" value="0" />
            <enum name="South" value="90" />
            <enum name="West" value="180" />
            <enum name="North" value="270" />
        </attr>
        <attr name="rotateToCenter" format="boolean" />
        <attr name="isRotating" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="name" format="string" />
    </declare-styleable>

    <!-- 自定义标题控件 的属性 -->
    <declare-styleable name="OutStoreTaskInputerView">

        <!-- 声明属性 -->
        <attr name="android:text" />
        <attr name="android:textColor" />
    </declare-styleable>

    <!-- 自定义标题控件 的属性 -->
    <declare-styleable name="ActivityHeadItemView">

        <!-- 声明属性 -->
        <attr name="android:text" />
        <attr name="android:src" />
        <!-- 定义属性 -->
        <attr name="showImage" format="boolean" />
    </declare-styleable>
    <!-- 自定义set item控件 的属性 -->
    <declare-styleable name="ViewSettingItem">

        <!-- 声明属性 -->
        <attr name="android:text" />
    </declare-styleable>
    <!-- 自定义set switch item控件 的属性 -->
    <declare-styleable name="ViewSettingSwitchItem">

        <!-- 声明属性 -->
        <attr name="android:text" />
    </declare-styleable>
    <declare-styleable name="CoverBagItemView">

        <!-- Defines whether a child is limited to draw inside of its bounds or not. This is useful with animations that scale the size of the children to more than 100% for instance. In such a case, this property should be set to false to allow the children to draw outside of their bounds. The default value of this property is true. -->
        <attr name="android:text" />
    </declare-styleable>

    <string-array name="array_name_diqu">
        <item>青岛</item>
        <item>鄂州</item>
        <item>成都</item>
    </string-array>
    <string-array name="array_name_can">
        <item>完整</item>
        <item>残损</item>
    </string-array>
    <string-array name="array_name_dai">
        <item>100元</item>
        <item>50元</item>
        <item>20元</item>
        <item>10元</item>
        <item>5元</item>
        <item>1元</item>
        <item>0.5元</item>
    </string-array>
    <string-array name="array_name_bank">
        <item>工商银行</item>
        <item>农业银行</item>
        <item>建设银行</item>
        <item>招商银行</item>
    </string-array>

    <!-- 封袋时读写显示的动画 -->
    <declare-styleable name="ProcessChart">
        <attr name="showText" format="boolean" />
        <attr name="labelPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="text" format="string" />
        <attr name="colorhead" format="color" />
        <attr name="colorout" format="color" />
        <attr name="colortext" format="color" />
    </declare-styleable>

</resources>