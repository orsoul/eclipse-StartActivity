<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange" >

        <ImageView
            android:id="@+id/screen_manage_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/screen_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="库内操作"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/screen_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/screen_initScreen"
            style="@style/store_manage_center_btn"
            android:layout_marginTop="10dp"
            android:text="屏初始化"
            android:visibility="gone" />

        <Button
            android:id="@+id/screen_register"
            style="@style/store_manage_center_btn"
            android:text="注册屏幕" />

        <Button
            android:id="@+id/screen_cancle"
            style="@style/store_manage_center_btn"
            android:layout_marginTop="10dp"
            android:text="注销屏幕" />

        <Button
            android:id="@+id/screen_start"
            style="@style/store_manage_center_btn"
            android:layout_marginTop="10dp"
            android:text="启用屏幕" />

        <Button
            android:id="@+id/screen_stop"
            style="@style/store_manage_center_btn"
            android:layout_marginTop="10dp"
            android:text="停用屏幕" />
		<Button
            android:id="@+id/linkScreen"
            style="@style/store_manage_center_btn"
            android:layout_marginTop="10dp"
            android:text="屏-堆关联" />
    </LinearLayout>

</LinearLayout>
