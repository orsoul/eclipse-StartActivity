<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <com.fanfull.view.ActivityHeadItemView
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功率设置"
        title:showImage="true" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="封袋功率"
            android:textColor="@color/sliverwhite"
            android:textSize="15sp" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/corners_bg">
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读功率 :"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/tv_setting_power_normal_read_power"
            style="@style/et_power"
            android:text="15" />
        
        <SeekBar
            android:id="@+id/sb_setting_power_read_cover"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>  
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写功率 :"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_setting_power_normal_write_power"
            style="@style/et_power"
            android:text="20" />
        
        <SeekBar
            android:id="@+id/sb_setting_power_write_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    
    </LinearLayout>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="入库功率 "
            android:textSize="15sp" 
            android:textColor="@color/sliverwhite"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/corners_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读功率 :"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_setting_power_dynamic_read_power"
            style="@style/et_power"
            android:text="20" />
        
        <SeekBar
            android:id="@+id/sb_setting_power_read_instore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写功率 :"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_setting_power_dynamic_write_power"
            style="@style/et_power"
            android:text="20" />
        
        <SeekBar
            android:id="@+id/sb_setting_power_write_instore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" />
    </LinearLayout>
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_activity_setting_power_save"
            android:layout_marginLeft="10dp"
            style="@style/activity_btn"
            android:text="保存" />

        <Button
            android:id="@+id/btn_activity_setting_power_cancel"
            style="@style/activity_btn"
            android:layout_marginLeft="10dp"
            android:text="放弃" />

        <Button
            android:id="@+id/btn_activity_setting_power_set_normal"
            style="@style/activity_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="推荐" />
    </LinearLayout>
    
    </LinearLayout>

</LinearLayout>