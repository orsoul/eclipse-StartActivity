<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	<LinearLayout 
	    android:id="@+id/second_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="170dp"
	    android:background="@color/white"
	    android:visibility="gone"
	    android:orientation="vertical" >
	    <TextView
	        android:id="@+id/finger_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:textColor="@color/red"
	        android:textSize="24sp"
	        android:text="指纹验证已通过" />
	
	    <TextView
	        android:id="@+id/finger_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textSize="17sp"
	        android:text="是否继续先前的步骤执行？" />
	
	        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal" >
	        <Button
	        android:id="@+id/finger_ok"
	        style="@style/activity_btn"
	        android:layout_width="60dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="27dp"
	        android:layout_marginTop="25dp"
	        android:layout_marginBottom="15dp"
	        android:text="继续" />
	
	   	 <Button
	        android:id="@+id/finger_cancel"
	        style="@style/activity_btn"
	        android:layout_width="60dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="32dp"
	        android:layout_marginTop="25dp"
	        android:layout_marginBottom="15dp"
	        android:text="退出" />
	    </LinearLayout>
     </LinearLayout>
    
	<LinearLayout 
	    android:id="@+id/first_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="170dp"
	    android:background="@color/white"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:textSize="24sp"
	         android:textColor="@color/red"
	        android:text="请验证指纹信息" />
	
	    <TextView
	        android:id="@+id/check_finger_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textSize="18sp"
	        android:text="指纹未验证,请按手指验证"/>
	
	        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal" >
	        <Button
	        android:id="@+id/finger_ok"
	        style="@style/activity_btn"
	        android:layout_width="60dp"
	        android:layout_marginLeft="17dp"
	        android:layout_height="40dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:visibility="gone"
	        android:text="继续" />
	
	   	 <Button
	        android:id="@+id/btn_check_finger_cancel"
	        style="@style/activity_btn"
	        android:layout_width="120dp"
	        android:layout_marginLeft="40dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="25dp"
	        android:layout_marginBottom="15dp"
	        android:text="退    出" />
	    </LinearLayout>
    
</LinearLayout>
        

</LinearLayout>
