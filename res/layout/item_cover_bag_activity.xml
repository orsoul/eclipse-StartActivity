<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_item_coverbag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="扫描 EPC"
        
        android:textColor="@color/sliverwhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_item_coverbag_des"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_item_coverbag"
        android:text=""
        android:textColor="@drawable/selector_coverbag_check_descolor"
        android:textSize="12sp" />
    
    <ImageView
        android:id="@+id/im_item_coverbag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="获取图片失败"
        android:layout_toRightOf="@id/tv_item_coverbag_des"
        android:clickable="false"
        android:src="@drawable/selector_coverbag_check_img"
        android:visibility="visible" />

</RelativeLayout>